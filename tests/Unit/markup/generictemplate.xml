<main>
    <get_started>
        <bot>
            <message_type>
                <type>RESPONSE</type>
                <!--
                    <tag> is  for type MESSAGE_TAG only
                    @see https://developers.facebook.com/docs/messenger-platform/send-messages#standard_messaging
                -->
                <!--tag>ACCOUNT_UPDATE</tag-->
            </message_type>
            <message>
                <attachment>
                    <type>template</type>
                    <payload>
                        <template_type>generic</template_type>
                        <elements>
                            <title>Welcome!</title>
                            <image_url>https://raw.githubusercontent.com/fbsamples/original-coast-clothing/main/public/styles/male-work.jpg</image_url>
                            <subtitle>We have the right hat for everyone.</subtitle>
                            <default_action>
                                <type>web_url</type>
                                <url>https://www.originalcoastclothing.com/</url>
                                <webview_height_ratio>tall</webview_height_ratio>
                            </default_action>
                            <buttons>
                                <type>web_url</type>
                                <url>https://www.originalcoastclothing.com/</url>
                                <title>View website!</title>
                            </buttons>
                            <buttons>
                                <type>web_url</type>
                                <url>https://www.originalcoastclothing.com/</url>
                                <title>View website 2!</title>
                            </buttons>
                        </elements>
                    </payload>
                </attachment>
            </message>
        </bot>
    </get_started>
</main>